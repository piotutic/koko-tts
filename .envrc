#!/usr/bin/env bash
# Nix flake development environment
# This file is used by direnv to automatically enter the Nix development shell
# when you cd into this directory.
#
# Installation:
# 1. Install direnv: https://direnv.net/docs/installation.html
# 2. Add 'eval "$(direnv hook bash)"' to your ~/.bashrc or ~/.zshrc
# 3. Run 'direnv allow' in this directory

use flake

# Optional: Export useful environment variables
export PROJECT_ROOT="$PWD"
export TTS_OUTPUT_DIR="$PWD/output"
export TTS_STREAMING_OUTPUT_DIR="$PWD/streaming_output"

# Create output directories
mkdir -p "$TTS_OUTPUT_DIR" "$TTS_STREAMING_OUTPUT_DIR"

# Add local npm binaries to PATH
PATH_add node_modules/.bin

# Show project info when entering directory
echo "üé§ Entered Kokoro-js TTS development environment"
echo "üìÅ Project root: $PROJECT_ROOT"
echo "üéµ Output directories ready"